<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="296dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewRestauranteFoto"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/splash" />

        <TextView
            android:id="@+id/textViewRestauranteNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Nome do Restaurante"
            android:textColor="#283544"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewRestauranteEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Endereço do Restaurante"
            android:textColor="#283544"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textViewRestauranteHorarioFechamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Horário Fechamento"
            android:textColor="#283544"
            android:textSize="15sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>